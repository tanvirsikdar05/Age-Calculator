<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".DialogAddMemberActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewicon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toTopOf="@+id/rloverall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#676666"
                android:src="@drawable/camera2icon"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toTopOf="@+id/rloverall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:id="@+id/rloverall"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="#ffffff"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">



                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#bb000000" />








                <EditText

                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/border_edittext_light"
                    android:capitalize="words"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />











                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Enter Date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#bb000000" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_edittext_light"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3.3"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/edit_text_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:hint="@string/txtdd"
                            android:imeOptions="actionNext"
                            android:inputType="numberSigned"
                            android:padding="13.0dip"
                            android:selectAllOnFocus="true"
                            android:textColor="@android:color/black"
                            android:textCursorDrawable="@null"
                            android:textSize="20.0sp"
                            android:typeface="serif"
                            android:maxLength="2"/>

                        <TextView
                            android:id="@+id/tvSeprator1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hass"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp"
                            android:typeface="serif" />

                        <EditText
                            android:id="@+id/edit_text_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:hint="@string/mm"
                            android:imeOptions="actionNext"
                            android:inputType="numberSigned"
                            android:padding="13.0dip"
                            android:selectAllOnFocus="true"
                            android:maxLength="2"
                            android:textColor="@android:color/black"
                            android:textCursorDrawable="@null"
                            android:textSize="20.0sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/tvSeprator2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hass"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp"
                            android:typeface="serif" />

                        <EditText
                            android:id="@+id/edit_text_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:hint="@string/yyyy"
                            android:imeOptions="actionNext"
                            android:inputType="numberSigned"
                            android:padding="13.0dip"
                            android:selectAllOnFocus="true"
                            android:textColor="@android:color/black"
                            android:textCursorDrawable="@null"
                            android:textSize="20.0sp"
                            android:typeface="serif"
                            android:maxLength="4"/>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivCalendar11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical|center_horizontal|center"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/calendar" />

                </LinearLayout>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Occasion"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#bb000000" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorGrey">

                    <Spinner

                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etOccasion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_edittext_light"
                    android:hint="Enter Occasion"
                    android:imeOptions="actionDone"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:text="Birthday"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textStyle="bold"
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:padding="8dp"
                    android:text="Cancel"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorPrimary" />

                <Button
                    android:textStyle="bold"
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:padding="8dp"
                    android:text="Save"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>










</RelativeLayout>